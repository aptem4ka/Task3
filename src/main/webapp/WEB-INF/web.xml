<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
    <servlet-name>Show menu</servlet-name>
    <servlet-class>com.epam.menu.web.MenuServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Show menu</servlet-name>
    <url-pattern>/menu.get</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>10</session-timeout>
  </session-config>

</web-app>
